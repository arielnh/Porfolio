---

interface Props {
  title: string
  description: string
  date: string
}

const { title, description, date } = Astro.props
---

<time
  class="mb-1 text-sm leading-none font-bold bg-gradient-to-r from-slate-200 to-slate-400 bg-clip-text text-transparent"
  >{date}</time
>
<h3 class="text-lg font-semibold text-amber-200 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-neutral-300 text-pretty">
  {description}
</p>

